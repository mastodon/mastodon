    "lint:js": "eslint . --ext=.js,.jsx,.ts,.tsx --cache --report-unused-disable-directives",
    "lint:json": "prettier --check \"**/*.{json,json5}\"",
    "lint:md": "prettier --check \"**/*.md\"",
