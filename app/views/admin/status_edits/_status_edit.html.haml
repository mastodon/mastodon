%li
  .history__entry
    %h5
      - if status_edit_iteration.first?
        = t('admin.statuses.original_status')
      - else
        = t('admin.statuses.status_changed')
      ·
      %time.formatted{ datetime: status_edit.created_at.iso8601, title: l(status_edit.created_at) }= l(status_edit.created_at)

    .status
      = render partial: 'admin/shared/status_content', locals: { status: status_edit }

      .detailed-status__meta
        %time.formatted{ datetime: status_edit.created_at.iso8601, title: l(status_edit.created_at) }= l(status_edit.created_at)

        - unless status_edit.reblog?
          ·
          = material_symbol(visibility_icon(status_edit))
          = t("statuses.visibilities.#{status_edit.visibility}")
        - if status_edit.proper.sensitive?
          ·
          = material_symbol('visibility_off')
          = t('stream_entries.sensitive_content')
