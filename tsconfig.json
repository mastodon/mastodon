{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "tmp/cache/tsconfig.tsbuildinfo",
    "paths": {
      "mastodon": ["app/javascript/mastodon"],
      "mastodon/*": ["app/javascript/mastodon/*"],
      "@/*": ["app/javascript/*"]
    }
  },
  "include": [
    "app/javascript/mastodon",
    "app/javascript/entrypoints",
    "app/javascript/types"
  ]
}
