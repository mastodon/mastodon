{
  "name": "Mastodon on local machine",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {}
  },

  "forwardPorts": [3000, 4000],

  "portsAttributes": {
    "3000": {
      "label": "web",
      "onAutoForward": "notify",
      "requireLocalPort": true
    },
    "4000": {
      "label": "stream",
      "onAutoForward": "silent",
      "requireLocalPort": true
    }
  },

  "remoteUser": "vscode",

  "otherPortsAttributes": {
    "onAutoForward": "silent"
  },

  "remoteEnv": {
    "MISE_DATA_DIR": "/home/vscode/.local/share/mise",
    "MISE_CONFIG_DIR": "/home/vscode/.config/mise",
    "MISE_CACHE_DIR": "/home/vscode/.cache/mise"
  },

  "onCreateCommand": {
    "git": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "mise-idiomatic-version-file-ruby": "mise settings add idiomatic_version_file_enable_tools ruby",
    "mise-idiomatic-version-file-node": "mise settings add idiomatic_version_file_enable_tools node",
    "mise-install": "mise install -y"
  },
  "postCreateCommand": "bin/setup",
  "waitFor": "postCreateCommand",

  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": ["EditorConfig.EditorConfig", "webben.browserslist"]
    },
    "jetbrains": {
      "backend": "RubyMine",
      "plugins": ["org.toml.lang", "com.github.l34130.mise"]
    }
  }
}
